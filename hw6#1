import pandas as pd
import altair as alt

# Load the dataset
data = pd.read_csv('building_inventory.csv')

# Data preparation for Visualization 1
viz1_data = data.groupby('Agency Name')['Square Footage'].sum().reset_index().sort_values(by='Square Footage', ascending=False)

# Visualization 1: Bar Chart (Static)
viz1 = alt.Chart(viz1_data).mark_bar().encode(
    x=alt.X('Square Footage:Q', title='Total Square Footage'),
    y=alt.Y('Agency Name:N', sort='-x', title='Agency Name'),
    color=alt.Color('Square Footage:Q', scale=alt.Scale(scheme='blues'), title='Square Footage')
).properties(
    title='Total Square Footage by Agency',
    width=600,
    height=400
)

viz1.show()
